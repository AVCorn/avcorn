{
    "family": "avcorn-container",
    "containerDefinitions": [
        {
            "Name": "avcorn-container",
            "Essential": "true",
            "Image": "avcorn-image",
            "MemoryReservation": 512,
            "LogConfiguration": {
                "LogDriver": "awslogs",
                "Options": {
                    "awslogs-group": {
                        "Ref": "LogGroup"
                    },
                    "awslogs-region": {
                        "Ref": "AWS::Region"
                    },
                    "awslogs-stream-prefix": {
                        "Ref": "AWS::StackName"
                    }
                }
            },
            "MountPoints": [
                {
                    "ContainerPath": "/var/www",
                    "SourceVolume": {
                        "Fn::Join": [
                            "-",
                            [
                                {
                                    "Ref": "AWS::StackName"
                                },
                                "volume"
                            ]
                        ]
                    }
                }
            ],
            "PortMappings": [
                {
                    "ContainerPort": 80
                }
            ]
        }
    ],
    "volumes": [
        {
            "name": "avcorn-volume",
            "host": {}
        }
    ],
    "placementConstraints": [],
    "tags": []
}