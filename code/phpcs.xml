<?xml version="1.0"?>
<ruleset name="Slim coding standard">
    <description>AVCorn coding standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR12"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Paths to check -->
    <file>backend/source</file>
    <file>backend/library</file>
    <file>backend/index.php</file>
    <file>public/index.php</file>

    <file>tests/Acceptance</file>
    <file>tests/Benchmark</file>
    <file>tests/Functional</file>
    <file>tests/Intergration</file>
    <file>tests/Regression</file>
    <file>tests/Support</file>
    <file>tests/Unit</file>
</ruleset>